<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1E1E2E"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ« Mon Panier"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtMessagePanier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vos films sÃ©lectionnÃ©s"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Liste des films dans le panier -->
    <ListView
        android:id="@+id/listViewPanier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomCard" />

    <!-- Carte Total et Bouton Commander -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1E1E2E"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Ligne de sÃ©paration -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3A3A4E"
                android:layout_marginBottom="16dp" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#AAAAAA" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 â‚¬"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#00D9A3" />
            </LinearLayout>

            <!-- Bouton Commander -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCommander"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Commander"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="#6C63FF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
